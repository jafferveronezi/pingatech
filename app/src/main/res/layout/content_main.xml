<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            tools:showIn="@layout/activity_main"
            tools:context=".view.activity.DetailActivity">

        <ImageView
                android:layout_width="@dimen/default_100_dp"
                android:layout_height="@dimen/default_100_dp"
                tools:srcCompat="@drawable/barril"
                android:id="@+id/image_detail"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="@dimen/default_8_dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="@dimen/default_16_dp"/>
        <TextView
                tools:text="PINGA BOA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/name_value"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/image_detail"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="@dimen/default_16_dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="@dimen/default_16_dp" android:textStyle="bold" android:textSize="18sp"/>
        <TextView
                android:text="@string/history"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/history_detail"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                app:layout_constraintHorizontal_bias="0.25" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/textView7" tools:text="@string/history"/>
        <Button
                android:theme="@style/ButtonTheme"
                android:text="@string/contact"
                android:layout_width="@dimen/default_240_dp"
                android:layout_height="@dimen/default_46_dp"
                android:id="@+id/contact_detail"
                android:textColor="@color/colorAccent"
                android:layout_marginEnd="@dimen/default_8_dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="@dimen/default_8_dp"
                app:layout_constraintStart_toStartOf="parent"
                android:background="@drawable/shape_button"
                app:layout_constraintHorizontal_bias="0.496" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/mapView"/>
        <Button
                android:theme="@style/ButtonTheme"
                android:text="@string/shared"
                android:layout_width="@dimen/default_240_dp"
                android:layout_height="45dp"
                android:id="@+id/compartilhar_button"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="@dimen/default_8_dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="@dimen/default_8_dp"
                android:textColor="@color/colorAccent"
                android:layout_marginTop="@dimen/default_24_dp"
                app:layout_constraintTop_toBottomOf="@+id/contact_detail"
                android:background="@drawable/shape_button"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/type_detail_label" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/name_value" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                tools:text="@string/type_detail_pinga" android:text="@string/type_detail_pinga" android:textStyle="bold"
                android:contentDescription="@string/type_detail_pinga"/>
        <TextView
                android:text="@string/manufacture_year_pinga"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/manufacture_year_label" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/type_detail_label"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" tools:text="@string/manufacture_year_pinga" android:textStyle="bold"
                android:contentDescription="@string/manufacture_year_pinga"/>
        <TextView
                android:text="@string/city_pinga"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/city_label" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/manufacture_year_label"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                app:layout_constraintHorizontal_bias="0.0" tools:text="@string/city_pinga" android:textStyle="bold"
                android:contentDescription="@string/city_pinga"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/type_value"
                tools:text="Ouro"
                android:text="Ouro"
                tools:layout_editor_absoluteY="140dp" tools:layout_editor_absoluteX="126dp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/manufacture_year_value"
                app:layout_constraintStart_toEndOf="@+id/manufacture_year_label"
                android:layout_marginStart="8dp" tools:text="2019" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" app:layout_constraintHorizontal_bias="0.0" android:text="2019"
                android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/type_value"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/city_value" app:layout_constraintStart_toEndOf="@+id/city_label"
                android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                app:layout_constraintHorizontal_bias="0.0" tools:text="Campo do Meio" android:text="Campo do Meio"
                android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/manufacture_year_value"/>
        <TextView
                android:text="@string/description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView7" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/city_label" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" tools:text="@string/description" android:textStyle="bold"
                android:contentDescription="@string/description"/>
        <com.google.android.gms.maps.MapView
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:id="@+id/mapView" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/history_detail" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toTopOf="@+id/contact_detail"/>

    </android.support.constraint.ConstraintLayout>
</ScrollView>