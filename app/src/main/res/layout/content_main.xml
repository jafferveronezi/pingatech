<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_main"
        tools:context=".view.activity.DetailActivity">

    <ImageView
            android:layout_width="@dimen/default_100_dp"
            android:layout_height="@dimen/default_100_dp"
            tools:srcCompat="@drawable/barril"
            android:id="@+id/image_detail"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="@dimen/default_8_dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="@dimen/default_16_dp"/>
    <TextView
            android:text="CachaÃ§a BOA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/name_detail"
            android:layout_marginTop="@dimen/default_16_dp"
            app:layout_constraintTop_toBottomOf="@+id/image_detail"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="@dimen/default_16_dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="@dimen/default_16_dp"/>
    <TextView
            android:text="@string/history"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/history_detail"
            android:layout_marginTop="@dimen/default_16_dp"
            app:layout_constraintTop_toBottomOf="@+id/name_detail"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="@dimen/default_16_dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="@dimen/default_16_dp"/>
    <Button
            android:theme="@style/ButtonTheme"
            android:text="@string/contact"
            android:layout_width="@dimen/default_240_dp"
            android:layout_height="@dimen/default_46_dp"
            android:id="@+id/contact_detail"
            android:textColor="@color/colorAccent"
            android:layout_marginTop="@dimen/default_16_dp"
            app:layout_constraintTop_toBottomOf="@+id/history_detail"
            android:layout_marginEnd="@dimen/default_8_dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="@dimen/default_8_dp"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@drawable/shape_button"/>
    <Button
            android:theme="@style/ButtonTheme"
            android:text="@string/shared"
            android:layout_width="@dimen/default_240_dp"
            android:layout_height="@dimen/default_46_dp"
            android:id="@+id/compartilhar_button"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="@dimen/default_8_dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="@dimen/default_8_dp"
            android:textColor="@color/colorAccent"
            android:layout_marginTop="@dimen/default_24_dp"
            app:layout_constraintTop_toBottomOf="@+id/contact_detail"
            android:background="@drawable/shape_button"/>

</android.support.constraint.ConstraintLayout>