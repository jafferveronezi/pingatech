<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.activity.DetailsItemActivity">

<android.support.constraint.ConstraintLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/title_detail" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="parent" tools:text="Pinga BOA"
            android:textStyle="bold" android:textColor="@color/colorAccent" android:textSize="24sp"/>
    <TextView
            android:text="@string/city_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/city_label" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/title_detail" android:textStyle="bold"
            android:layout_marginStart="16dp" app:layout_constraintStart_toStartOf="parent"
            android:contentDescription="@string/city_details"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/city_detail" app:layout_constraintStart_toEndOf="@+id/city_label"
            android:layout_marginStart="8dp"
            tools:text="Campo do Meio" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/title_detail"/>
    <TextView
            android:text="@string/year_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/manufactureYear_label" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/city_label" android:textStyle="bold"
            android:layout_marginStart="16dp" app:layout_constraintStart_toStartOf="parent"
            android:contentDescription="@string/year_details"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/manufactureYear_detail" app:layout_constraintStart_toEndOf="@+id/manufactureYear_label"
            android:layout_marginStart="8dp"
            tools:text="2019" app:layout_constraintTop_toBottomOf="@+id/city_detail" android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            app:layout_constraintHorizontal_bias="0.0"/>
    <TextView
            android:text="@string/type_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/type_label" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/manufactureYear_label"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp" android:textStyle="bold"
            android:contentDescription="@string/type_details"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/type_detail" app:layout_constraintStart_toEndOf="@+id/type_label"
            android:layout_marginStart="8dp" tools:text="Ouro" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/manufactureYear_detail" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" app:layout_constraintHorizontal_bias="0.007"/>
    <TextView
            android:text="@string/description"
            android:ems="10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/description_label" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/type_label" android:textStyle="bold"
            android:contentDescription="@string/description"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/description_detail" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/description_label" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" app:layout_constraintHorizontal_bias="0.0"
            tools:text="Dscrição Dscrição Dscrição Dscrição Dscrição Dscrição Dscrição Dscrição "/>
    <Button
            android:theme="@style/ButtonTheme"
            android:text="@string/shared"
            android:layout_width="@dimen/default_240_dp"
            android:layout_height="@dimen/default_46_dp"
            android:background="@drawable/shape_button"
            android:textColor="@color/colorAccent"
            android:id="@+id/shared_button" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/description_detail"
            app:layout_constraintHorizontal_bias="0.498" android:contentDescription="@string/shared"/>
    <Button
            android:theme="@style/ButtonTheme"
            android:background="@drawable/shape_button"
            android:textColor="@color/colorAccent"
            android:text="@string/edit"
            android:layout_width="@dimen/default_240_dp"
            android:layout_height="@dimen/default_46_dp"
            android:id="@+id/update_button" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/shared_button" tools:text="@string/edit"
            android:contentDescription="@string/edit"/>
</android.support.constraint.ConstraintLayout>


</ScrollView>